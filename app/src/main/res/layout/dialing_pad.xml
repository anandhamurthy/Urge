<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/call_dialer_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/dialer_number"
            android:background="@color/colorWhite"
            android:textSize="30dp"
            android:inputType="phone"
            android:imeOptions="actionGo"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btn_clear"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:src="@drawable/backspace"
            android:background="@color/colorWhite"
            android:onClick="clear" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dailer_pad"
        android:layout_below="@+id/dialer_number"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="one"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="2"
                android:onClick="two"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />
            <Button
                android:id="@+id/btn_three"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="3"
                android:onClick="three"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="four"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="4"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />
            <Button
                android:id="@+id/btn_five"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="5"
                android:onClick="five"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />
            <Button
                android:id="@+id/btn_six"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="six"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="6"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="7"
                android:onClick="seven"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="8"
                android:onClick="eight"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="9"
                android:onClick="nine"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_star"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="*"
                android:onClick="star"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/btn_zero"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="zero"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/btn_hash"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"
                android:text="#"
                android:onClick="hash"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/btn_call"
        android:src="@drawable/call"
        android:layout_below="@+id/dailer_pad"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:onClick="call"
        android:layout_height="wrap_content" />

</LinearLayout>